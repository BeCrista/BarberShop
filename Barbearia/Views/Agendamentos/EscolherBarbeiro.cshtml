@model IEnumerable<Barber>

@{
    ViewData["Title"] = "Escolha o barbeiro";
}

<section class="container py-5">
    <h2 class="mb-4 text-center" style="font-family: 'Montserrat', sans-serif; font-size: 20px; font-weight: 700; text-transform: uppercase; color: black;">Escolha um Barbeiro</h2>
    <div class="row g-4">
        @foreach (var b in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow barber-card rounded-4">
                    <img src="@b.FotoUrl" class="card-img-top object-fit-cover" style="height: 600px;" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title fw-bold text-uppercase text-center">@b.Nome</h5>
                            <p class="text-muted text-center">@b.Especialidade</p>
                        </div>
                        <a class="btn btn-dark mt-3 w-100 rounded-pill" asp-action="EscolherHorario" asp-route-barberId="@b.Id">
                            Ver horários disponíveis
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .barber-card:hover {
        transform: translateY(-6px);
        transition: transform 0.3s ease;
    }

    .text-muted {
        font-family: Ek Mukta,sans-serif;
        font-size: 16px;
    }
</style>
